@model IEnumerable<GateCommunityMvc.Models.SocietyDetails>

@{
    ViewData["Title"] = "Display";
    Layout = "~/Views/Admin/_Layout.cshtml";
   // Layout=null;
}

<h1>Display</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="society" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Society ID</th>
            <th>Society Name</th>
            <th>Description</th>
            <th>President Name</th>
            <th>gender</th>
           
           
            <th>status</th>
            <th>Address</th>
            <th>Country</th>
            <th>state</th>
            <th>City</th>
            <th>Postal code</th>
            <th>Phoneno</th>
           
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Society_Id
                </td>
                <td>@item.Society_Name</td>
                <td>@item.Description</td>
                <td>@item.President_Name</td>
                <td>@item.Gender</td>
               
                <td>@item.status</td>
                <td>@item.Address</td>
                <td>@item.Country</td>
                <td>@item.State</td>
                <td>@item.City</td>
                <td>@item.Postal_Code</td>
                <td>@item.Contact</td>
              
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
