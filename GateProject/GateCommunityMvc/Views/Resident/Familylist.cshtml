@model IEnumerable<GateCommunityMvc.Models.Family>

@{
    ViewData["Title"] = "Familylist";
    Layout = "~/Views/Resident/_Layout.cshtml";
}

<h1>Familylist</h1>

<p>
    <a asp-action="Addfamily">Create New</a>
</p>
<table id="familylist" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Member Name
            </th>
            <th>
                Relationship
            </th>
            <th>
                Contact Number
            </th>
            <th>
               Email
            </th>
            <th>
               Profile Photo
            </th>
           
            <th>
               Gender
            </th>
            <th>
               Gate Passcode
            </th>
           
            <th>Action

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @item.FamilyName
            </td>
            <td>
                    @item.relationship
            </td>
            <td>
                    @item.contact
            </td>
            <td>
                    @item.email
            </td>
            <td>
                    <img src="~/@item.filepath" width="50" height="50" alt="Profile Image" />

                  
             </td>
                
              
            <td>
                @item.gender
            </td>
            <td>
                @item.passcode
            </td>
           
            <td>
                <a asp-action="Editfamily" asp-route-id="@item.FamilyId">Edit</a> |
               
                <a asp-action="Deletefamily" asp-route-id="@item.FamilyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section family {

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
   
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js" defer></script>
    <script>
        $(document).ready(function () {
            $('#familylist').DataTable();
        });
    </script>
}