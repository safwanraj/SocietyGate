@model IEnumerable<GateCommunityMvc.Models.Staff>

@{
    ViewData["Title"] = "Stafflist";
    Layout = "~/Views/Resident/_Layout.cshtml";
}

<h1>Stafflist</h1>

<p>
    <a asp-action="Addstaff">Create New</a>
</p>
<table id="stafflist" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Staff Name
            </th>
            <th>
               Email
            </th>
            <th>
              Contact
            </th>
            <th>
               Aadhar No.
            </th>
            <th>
               Work as
            </th>
            <th>
                Gender
            </th>
            <th>
               Passcode
            </th>
            <th>
                Profile Photo
            </th>
          
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @item.staffName
            </td>
            <td>
                    @item.email
            </td>
            <td>
                    @item.contact
            </td>
            <td>
                    @item.aadharno
            </td>
            <td>
                    @item.workas
            </td>
            <td>
                    @item.gender
            </td>
            <td>
                    @item.passcode
            </td>
            <td>
                    <img src="~/@item.filepath" width="50" height="50" alt="Profile Image" />
            </td>
           
            <td>
                <form asp-action="Deletestaff" asp-controller="Resident" asp-route-Id='@item.staffId' method="post">
                        <a asp-action="Editstaff" asp-route-id="@item.staffId">Edit</a> |
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete?')">
                            Delete
   </button>
</form>
               
                
                   
                    
            </td>
        </tr>
}
    </tbody>
</table>
@section staff {

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js" defer></script>
    <script>
        $(document).ready(function () {
            $('#stafflist').DataTable();
        });
    </script>
   
}
