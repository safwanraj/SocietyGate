@model IEnumerable<GateCommunityMvc.Models.Vehicle>

@{
    ViewData["Title"] = "Vehiclelist";
    Layout = "~/Views/Resident/_Layout.cshtml";
}

<h1>Vehiclelist</h1>

<p>
    <a asp-action="Addvehicle">Create New</a>
</p>
<table id="vehiclelist" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Vehicle Number
            </th>
            <th>
                Vehicle Type
            </th>
            <th>
               Manufacturer
            </th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @item.vehicleno
            </td>
            <td>
                    @item.vehicletype
            </td>
            <td>
                    @item.manufacturer
            </td>
            
            <td>
                <a asp-action="Editvehicle" asp-route-id="@item.vehicleid">Edit</a> |
                
                <a asp-action="Deletevehicle" asp-route-id="@item.vehicleid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section vehicle {

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js" defer></script>
    <script>
        $(document).ready(function () {
            $('#vehiclelist').DataTable();
        });
    </script>
}