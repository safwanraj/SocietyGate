@model IEnumerable<GateCommunityMvc.Models.Wingmodel>

@{
    ViewData["Title"] = "Winglist";
    Layout = "~/Views/Society/_Layout.cshtml";
}

<h1>Winglist</h1>

<p>
    <a asp-action="AddWings">Create New</a>
</p>
<table id="winglist" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
               Wing Name
            </th>
            <th>
               Number of Floors
            </th>
            
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @item.WingName
            </td>
            <td>
                    @item.nooffloors
            </td>
            
            <td>
                    <form asp-action="Deletewing" asp-controller="Society" asp-route-id='@item.Id' method="post">
                        <a asp-action="Addwings" asp-route-wingid="@item.Id">Edit</a> |
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete?')">
                            Delete
                        </button>
                    </form>
                
               
            </td>
        </tr>
}
    </tbody>
</table>
@section wing {

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js" defer></script>
    <script>
        $(document).ready(function () {
            $('#winglist').DataTable();
        });
    </script>

}