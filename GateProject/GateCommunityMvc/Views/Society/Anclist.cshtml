@model IEnumerable<GateCommunityMvc.Models.Announcement>

@{
    ViewData["Title"] = "Announcements";
    Layout = "~/Views/Society/_Layout.cshtml";
}

<h1>Announcements</h1>

<p>
    <a asp-action="Addanc">Create New</a>
</p>
<table id="anclist" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
              Title
            </th>
            <th>
              Content
            </th>
            <th>
              Posted Date
            </th>
            
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @item.Title
            </td>
            <td>
                    @item.Content
            </td>
            <td>
                    @item.PostedDate
            </td>
            
            <td>
                    <form asp-action="Deleteanc" asp-controller="Society" asp-route-id='@item.Id' method="post">
                       
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete?')">
                            Delete
                        </button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
@section anc {

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js" defer></script>
    <script>
        $(document).ready(function () {
            $('#anclist').DataTable();
        });
    </script>

}
