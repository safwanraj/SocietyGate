@model GateCommunityMvc.Models.Wingmodel

<div class="container p-3 my-3 border">
    <h1> @ViewBag.PageName</h1>

    <div class="row">
        <div class="col-sm-6">
            <hr />
<form asp-action="AddWings">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h3>wing details</h3>
                @if (@ViewBag.IsEdit)
                {
                    <input type="hidden" asp-for="Id" />
                }
    <div class="form-group">
        <label asp-for="WingName">Name</label>
        <input asp-for="WingName" class="form-control" />
        <span asp-validation-for="WingName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="nooffloors">No. of Floors</label>
        <input asp-for="nooffloors" class="form-control" />
        <span asp-validation-for="nooffloors" class="text-danger"></span>
    </div>
    <hr />



    <button type="submit" class="btn btn-primary">Register</button>
</form>
        </div>
    </div>
</div>