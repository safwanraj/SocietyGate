@model IEnumerable<GateCommunityMvc.Models.Flatmodel>

@{
    ViewData["Title"] = "Flatlist";
    Layout = "~/Views/Society/_Layout.cshtml";
}

<h1>Flatlist</h1>

<p>
    <a asp-action="AddFlat">Create New</a>
</p>
<table id="flatlist" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
               Floor Number
            </th>
            <th>
             Flat Number
            </th>
          
            <th>
               Wing Name
            </th>
           
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.floorno
            </td>
            <td>
                    @item.flatno
            </td>
           
            <td>
                    @item.Wingmodel.WingName
            </td>
           
            <td>
                    <form asp-action="Deleteflat" asp-controller="Society" asp-route-id='@item.Flatid' method="post">
                        <a asp-action="AddFlat" asp-route-id="@item.Flatid">Edit</a> |
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete?')">
                            Delete
                        </button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
@section flat {

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js" defer></script>
    <script>
        $(document).ready(function () {
            $('#flatlist').DataTable();
        });
    </script>

}